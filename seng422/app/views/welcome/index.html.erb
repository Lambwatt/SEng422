<h1>LSCS</h1>

<p>Welcome to the Association of BC Land Surveyors Checklist System.</p>

<% unless user_signed_in? -%>
	<%= link_to "Log in", new_user_session_path %>
<% end -%>

<% if user_signed_in? -%>
	<p>Hello <%= current_user.username %>.</p>

	<% if can? :manage, User -%>
		<%= link_to "Manage users", users_path %><br/>
	<% end %>

	<% if current_user.role? :surveyor -%>
		<%= link_to "View your checklists", for_current_user_checklists_path %><br/>
	<% end %>

	<%= link_to "Log out", destroy_user_session_path, :method => :delete %>
<% end -%>
