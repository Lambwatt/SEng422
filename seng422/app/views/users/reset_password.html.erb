<h1>Resetting <%= @user.username %>'s password</h1>

<%= render partial: "errors" %>

<%= form_for @user, :url => update_password_user_path(@user), :method => :put do |f| %>
	<p>
		<%= f.label :password %><br/>
		<%= f.text_field :password %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to "Back", users_path %>
