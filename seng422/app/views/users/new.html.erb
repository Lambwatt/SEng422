<h1>New user</h1>

<%= render partial: "errors" %>

<%= form_for :user, url: users_path do |f| %>
	<p>
		<%= f.label :username %><br/>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :password %><br/>
		<%= f.text_field :password %>
	</p>
	<div>
		<%= render partial: "set_roles" %>
	</div>
	<p>
		<%= f.submit %>
	</p>

<% end %>

<%= link_to "Back", users_path %>
