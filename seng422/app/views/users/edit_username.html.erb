<h1>Changing <%= @user.username %>'s username</h1>

<%= render partial: "errors" %>

<%= form_for @user, :url => update_username_user_path(@user), :method => :put do |f| %>
	<p>
		<%= f.label :username %><br/>
		<%= f.text_field :username %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to "Back", users_path %>
