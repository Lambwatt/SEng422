<h1>All users</h1>

<table>
	<tr>
		<th>Name</th>
		<th></th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td>
				<%= user.username %>
				<% unless user.roles.empty? %>
					<strong>(<%= user.roles.map(&:name).join(", ") %>)</strong>
				<% end %>
			</td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
		</tr>
	<% end %>
</table>

<%= link_to 'New user', new_user_path %><br/>

<%= link_to "Home",  "/" %>
