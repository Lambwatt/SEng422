<h1>All users</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Roles</th>
		<th></th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td>
				<%= user.username %>
			</td>
			<td>
				<%= user.roles.map(&:name).join(", ") %>
			</td>
			<td><%= link_to 'Edit roles', edit_roles_user_path(user) %></td>
		</tr>
	<% end %>
</table>

<%= link_to 'New user', new_user_path %><br/>

