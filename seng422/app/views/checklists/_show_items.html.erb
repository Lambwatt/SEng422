<h3><%= section %></h3>
<table>
	<% @checklist.items.select {|item| item.section == section}.each do |i| %>
		<tr>
			<td>
				<%= i.title.strip %>
			</td>
			<% unless @checklist.approved %>
				<td>
					<%= i.status.strip %>
				</td>	
				<td><%= link_to 'Destroy',[i.checklist, i], :confirm=>  'Are you sure?' , :method => :delete %></td>
			<% end %>	
		</tr>
	<% end %>
</table>
