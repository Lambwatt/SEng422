<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @checklist.title %>
</p>

<p>
  <b>Status:</b>
  <%= @checklist.status %>
</p>

<% @checklist.items.each do |i| %>
	<tr>
		<td>
			<%= i.status %>
		</td>
		<td>
			<%= i.title %>
		</td><br>
	</tr>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@checklist, @checklist.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="hidden_field">
    <% f[ :status] = "unanswered" %><br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_checklist_path(@checklist) %> |
<%= link_to 'Back', checklists_path %> 
